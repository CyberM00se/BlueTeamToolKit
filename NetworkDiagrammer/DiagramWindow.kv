WindowManager:
    MainWindow:
    SecondWindow:

<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<MainWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.06,.45,.45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'TEMPORARY TEXT'
            size_hint_x: .9
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            text: 'nameofuser'
            color: (1,1,1,1)
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item:'
            background_normal: ''
            background_color: (.06, 0.32, .32, 1)
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (.06, 0.4, .4, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (.06, 0.65, .65, 1)
    
    BoxLayout:
        BoxLayout:
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
                Button:
                    id: caaa
                    text: 'TESTa'
                    background_color: (.06, 0.65, .65, 1)

        BoxLayout:
            id: privew
            orientation: "vertical"
            size_hint_x: .2